{
  "manifest_version": 2,
  "name": "LaMoppe",
  "version": "1.0",

  "description": "Pour nettoyer vos prompts.",

  "icons": {
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "notifications"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.chatgpt.com/*"],
      "js": ["main.js"]
    }
  ]
}