{
  "manifest_version": 2,
  "name": "LaMoppe",
  "version": "1.0",

  "description": "Pour nettoyer vos prompts.",

  "icons": {
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
    
  "permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "storage",
    "activeTab",
    "notifications",
    "webRequest",
    "webRequestBlocking"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.chatgpt.com/*"],
      "js": ["main.js"]
    }
  ]
}